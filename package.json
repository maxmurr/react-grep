{
  "name": "@react-grep/root",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:website": "turbo run dev --filter=@react-grep/website",
    "dev:vite": "turbo run dev --filter=@react-grep/example-vite",
    "dev:nextjs": "turbo run dev --filter=@react-grep/example-nextjs-webpack",
    "dev:react-router": "turbo run dev --filter=@react-grep/example-react-router",
    "dev:gatsby": "turbo run dev --filter=@react-grep/example-gatsby",
    "dev:esbuild": "turbo run dev --filter=@react-grep/example-esbuild",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "format": "oxfmt --write .",
    "format:check": "oxfmt --check .",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "changeset": "changeset",
    "release": "bun run build && changeset version && changeset publish",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "lefthook": "^1.11.13",
    "oxfmt": "^0.32.0",
    "oxlint": "^0.16.6",
    "turbo": "^2.5.0"
  },
  "packageManager": "bun@1.3.5"
}
